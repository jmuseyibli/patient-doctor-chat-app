<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Patient-Doctor Chat App</title>
        <link rel="stylesheet" media="screen" href="https://fontlibrary.org/face/carlito" type="text/css"/>
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
        <link href="{{ base_url() }}/css/theme.css" rel="stylesheet" />
        <link href="{{ base_url() }}/css/app.css" rel="stylesheet"/>
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
      <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Patient-Doctor Chat App</a>
          </div>
          <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li class="active"><a href="{{ path_for('home') }}">Home</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              {% if auth.check %}
        				<li class="dropdown">
        					<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{ auth.user.fullname() }}<span class="caret"></span></a>
        					<ul class="dropdown-menu" role="menu">
        						<li><a href="{{ path_for('auth.logout') }}">Logout</a></li>
        					</ul>
        				</li>
        			  {% else %}
        			    <li><a href="{{ path_for('auth.login') }}">Sign in</a></li>
        				  <li><a href="{{ path_for('auth.signup') }}">Sign up</a></li>
        			  {% endif %}
      			</ul>
          </div>
        </div>
      </nav>
        
      <div class="container">
        <div class="row">
          {% if flash.getMessage('info') %}
            <div class="alert alert-info">
                {{ flash.getMessage('info') | first }}
            </div>
            {% endif %}
            {% if flash.getMessage('error') %}
            <div class="error-text" style="padding:5px;">
                <span style="font-size:20px;color:red;">{{ flash.getMessage('error') | first }}</span>
            </div>
          {% endif %}
        </div>
        {% block content %}{% endblock %}
      </div>
      
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
      <script src="{{ base_url() }}/js/theme.js"></script>
      {% block footer_scripts %}{% endblock %}

    </body>
</html>
